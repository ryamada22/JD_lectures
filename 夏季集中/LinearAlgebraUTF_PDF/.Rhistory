library(knitr)
opts_chunk$set(echo = TRUE)
library(rgl)
knit_hooks$set(rgl = hook_webgl)
d <- 10
n <- 1000
x <- matrix(rnorm(d*n),ncol=d)
x <- apply(x,2,cumsum)
x.cov <- cov(x)
n.iter <- 100
sorted.vars <- matrix(0,n.iter,d)
for(i in 1:n.iter){
R <- Random.Start(d)
x.tmp <- t(R %*% t(x))
cov.tmp <- cov(x.tmp)
sorted.vars[i,] <- sort(diag(cov.tmp))
}
